<script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
<script type="text/javascript">
$(function(){
  $('#tanzakf').submit(function(e){
    var t = $('#tanzakt').val();
    if ( t.length > 0 ) {
        $.ajax({
            type: "POST",
            url: "/api",
            dataType: "json",
            data: { q: t }
        })
        .done(function( msg ) {
            $('#tanzakc').val(msg.c);

var tb = $('<a></a>');
tb.attr('href', 'https://twitter.com/share');
tb.attr('class', 'twitter-share-button');
tb.attr("data-text" , msg.c);
tb.attr("data-size" ,"large") ;
tb.attr("data-url" ,"http://tanzak.herokuapp.com/") ;
tb.attr("data-lang" ,"ja") ;
$('#tanzaks').children().detach();
$('#tanzaks').append(tb);
twttr.widgets.load();
        });
    }
    e.preventDefault();
  });
});
</script>
</body>
